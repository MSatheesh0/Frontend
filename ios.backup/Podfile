source 'https://github.com/CocoaPods/Specs.git'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  # Simplified flutter_root that doesn't require Generated.xcconfig to exist yet
  flutter_bin = `which flutter`.strip
  if flutter_bin.empty?
    raise "Flutter SDK not found. Please install Flutter and add it to PATH."
  end
  File.expand_path('../..', File.dirname(flutter_bin))
end

def flutter_packages_dir
  File.expand_path(File.join(flutter_root, '.pub-cache', 'hosted', 'pub.dartlang.org'))
end

begin
  require File.expand_path(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper'), __FILE__)
  flutter_ios_podfile_setup
rescue LoadError => e
  puts "Warning: Flutter podhelper not found (#{e}). Continuing with basic setup."
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  pod 'Flutter', :path => File.join(flutter_root, 'bin', 'cache', 'artifacts', 'engine', 'ios')
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target) if respond_to?(:flutter_additional_ios_build_settings)
    target.build_configurations.each do |config|
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'FLUTTER_ROOT=\$(SRCROOT)/Flutter',
        'FLUTTER_APPLICATION_PATH=\$(SRCROOT)/..',
        'FLUTTER_BUILD_DIR=build',
        'SYMROOT=\${SOURCE_ROOT}/../build/ios',
        'FLUTTER_BUILD_NAME=1.0.0',
        'FLUTTER_BUILD_NUMBER=1',
      ]
    end
  end
end
